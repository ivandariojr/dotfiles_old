# define the standard shell to be bash
shell -/bin/bash
deflogin off

# set our term to support 256 colors
term screen-256color

# set the initial title of windows to ''
shelltitle ''

# If we lose connection, detach. I think that they occasionaly change the
# default on the CoC terminal machines, so I made it explicit.
autodetach on

# Turn off any startup message, not that there is one.
startup_message off


# These two lines are a bit of voodoo that give me a neato little
# display status bar at the bottom of the screen, which shows the currently
# opened windows, their titles, which one is active, and the date and time.
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

# a different hardstatus line
#hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %=%D %M %d %c"
#hardstatus string '%{= kK}%-Lw%{= KW}%50>%n%f %t%{= kK}%+Lw%< %{=kG}%-= %d%M %c:%s%{-}'


# Make the scrollback buffer longer. Default is 100, which is a bit short.
defscrollback 1024

# Set the default escape and meta keys so that they don't conflict with emacs.
escape ^Oo

# Remove the binding for Ctrl-A k so we don't kill things accidentally.
# the only way to kill is to go Ctrl-A :kill now. Better, yes?
bind K
bind k
bind ^k
bind ^K

# Now we rebind Ctrl-A space to "window list" instead of "next window"
bind ' ' windowlist -b

# This should let bash mess with the xterm title from inside screen
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
